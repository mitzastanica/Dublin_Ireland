<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/layout_height_width"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/layout_height_width"
        android:layout_height="@dimen/layout_height_width"
        android:scaleType="centerCrop"
        tools:src="@drawable/el_grito" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_padding"
        android:paddingRight="@dimen/layout_padding"
        android:background="@color/background_app">

        <TextView
            android:id="@+id/name_text_view"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:gravity="bottom"
            android:textStyle="bold"
            tools:text="El GRITO"
            android:textSize="@dimen/text_size_name"
            android:layout_marginTop="@dimen/layout_marginTop"/>

        <TextView
            android:id="@+id/address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Merchant's Arch | Temple Bar, Dublin, Ireland"
            android:layout_marginTop="@dimen/layout_marginTop_text"
            android:textSize="@dimen/text_size_address"
            android:textStyle="italic|bold"/>
    </LinearLayout>

</LinearLayout>